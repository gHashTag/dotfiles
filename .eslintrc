{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": ["eslint:all", "plugin:react/all"],
    "rules": {
      "strict": 0,
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "indent": ["error", 2],
      "linebreak-style": [ "error", "unix" ],
      "quotes": [ "error", "single" ],
      "semi": [ "error", "never" ],
    }
}
